SetEnv PHP_VER 5_4
<IfModule mod_rewrite.c>

    RewriteEngine On

    # catch app/ and vendor/ as url
    RewriteRule ^(app/|vendor/) index.php [L]

    # all queries to index.php
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]

</IfModule>